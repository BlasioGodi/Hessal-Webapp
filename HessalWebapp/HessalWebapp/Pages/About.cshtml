@page
@model HessalWebapp.Pages.AboutModel
@{ViewData["Title"] = "About Us";
}

<section id="about_one">
    <div class="container-fluid background-bg bg-opacity-50 section-landing position-relative">
        <div class="bg-greyed-out bg-grey-pos bg-fixed">
            <div class="w-100 h-100 bg-dark bg-opacity-50"></div>
        </div>
        <div class="container"><h1 class="main-header">@ViewData["Title"]</h1></div>
    </div>
</section>
<section id="about_two">
    <div class="container section-about-container bg-white">
        <div class="row d-flex flex-wrap justify-content-center text-center">
            <h1 class="section-header my-4">Who we are</h1>
            <p class="paragraph-title">
                As a leading provider of LPG Gas systems, we ensure compliance with relevant industry standards and procedures for LPG installation, maintenance and safety.
                By adhering to these standards, we not only guarantee proper functioning of our systems but also instill confidence in our clients and their respective projects.
                We constantly strive to improve our services by embracing latest innovations, such as press-fit systems, that provide added benefits like ease of installation and leak prevention.
            </p>
        </div>
        <div class="border-bottom border-custom-black">
        </div> 
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="d-flex justify-content-center align-items-center pt-4 pb-4" id="vision-overlay">
                    <div class="overlay ">
                        <div class="overlay-content content-col">
                            <div class="overlay-front br-10 content-box content-box-center content-box-icon-o ">
                                <span class="icon-telescope color-black border-black"></span>
                                <h2 class="body-title">OUR VISION</h2>
                                <p class="body-text">
                                    Our Company envisions a future where every household and business experiences the benefits of efficient, clean, safe and reliable LPG installations.
                                    that foster a greener world, one LPG installation at a time.
                                </p>
                            </div>
                            <div class="overlay-back">
                                <div class="image-box-size">
                                    <div class="image-box">
                                        <div class="image">
                                            <img src="~/lib/src/values/E-Vision.png" loading="lazy" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <div class="d-flex justify-content-center align-items-center pt-4 pb-4" id="mission-overlay">
                    <div class="overlay">
                        <div class="overlay-content content-col ">
                            <div class="overlay-front br-10 content-box content-box-center content-box-icon-o ">
                                <span class="icon-map color-black border-black"></span>
                                <h2 class="body-title">OUR MISSION</h2>
                                <p class="body-text">
                                    Our mission is to consistently deliver innovative LPG projects that prioritize safety and instill a sense of security in our projects,
                                    while maintaining the highest standards of excellence.
                                </p>
                            </div>
                            <div class="overlay-back">
                                <div class="image-box-size">
                                    <div class="image-box">
                                        <div class="image">
                                            <img src="~/lib/src/values/Mission.png" loading="lazy" alt="">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
